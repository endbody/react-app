.Cate
    display: flex;
    .Cate-left
        width: 25%
        line-height: .4rem
        text-align: center
    .select
        color: #f60
    .Cate-right
        margin-top: .1rem
        display: flex
        justify-content: space-between
        flex-wrap: wrap
        height 1rem
        flex: 1
        li
            position relative
            float left
            margin-bottom: .1rem 
            width: 48%
            height: 1rem
            border: 1px solid blue
            border-radius: .04rem
            overflow hidden
            img 
                width: 100%
                height 100%
            p
                position: absolute
                left: 0
                bottom: 0
                width: 100%
                text-align: center
                background-color #f60
                color: #fff